{
	"name": "cosmic-esbuild",
	"version": "0.5.2",
	"description": "esbuild meets cosmiconfig, write your configs like you're used to",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/cosmic-esbuild.git"
	},
	"keywords": [
		"esbuild",
		"esbuild-config",
		"cosmiconfig"
	],
	"type": "module",
	"bin": {
		"cosmic-esbuild": "./lib/cli.js"
	},
	"exports": {
		"types": {
			"import": "./lib/config.d.ts",
			"require": "./lib/config.d.cts"
		},
		"import": "./lib/config.js",
		"require": "./lib/config.cjs"
	},
	"main": "./lib/config.cjs",
	"types": "./lib/config.d.cts",
	"engines": {
		"node": "^18.0.0 || ^20.0.0 || >=22.0.0"
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --cache --production",
		"lint:publint": "publint",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "vitest run"
	},
	"dependencies": {
		"@iarna/toml": "^2.2.5",
		"commander": "^14.0.2",
		"consola": "^3.4.2",
		"cosmiconfig": "^9.0.0",
		"cson-parser": "^4.0.9",
		"jsonc-parser": "^3.3.1",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.9.2",
		"@vitest/coverage-v8": "^4.0.5",
		"concurrently": "^9.2.1",
		"esbuild": "^0.25.11",
		"knip": "^5.66.4",
		"np": "^10.2.0",
		"publint": "^0.3.15",
		"tsdown": "^0.15.12",
		"vitest": "^4.0.5"
	},
	"peerDependencies": {
		"esbuild": "^0.25"
	},
	"packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34"
}
