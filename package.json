{
	"name": "cosmic-esbuild",
	"version": "0.7.1",
	"description": "esbuild meets cosmiconfig, write your configs like you're used to",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/cosmic-esbuild.git"
	},
	"keywords": [
		"esbuild",
		"esbuild-config",
		"cosmiconfig"
	],
	"type": "module",
	"bin": {
		"cosmic-esbuild": "./lib/cli.mjs"
	},
	"exports": {
		"types": {
			"import": "./lib/config.d.mts",
			"require": "./lib/config.d.cts"
		},
		"import": "./lib/config.mjs",
		"require": "./lib/config.cjs"
	},
	"main": "./lib/config.cjs",
	"types": "./lib/config.d.cts",
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np",
		"test": "vitest run"
	},
	"dependencies": {
		"commander": "^14.0.3",
		"confbox": "^0.2.4",
		"consola": "^3.4.2",
		"cosmiconfig": "^9.0.0",
		"cosmiconfig-typescript-loader": "^6.2.0",
		"cson-parser": "^4.0.9"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@idleberg/configs": "^0.4.2",
		"@types/node": "^24.10.2",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"np": "^11.0.2",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"esbuild": ">=0.25"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937"
}
